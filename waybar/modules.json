{
  "hyprland/workspaces": {
    "on-click": "activate",
    "all-outputs": true,
    "active-only": false,
    "format": "{icon}",
    "format-icons": {
      "1": "󰣇",
      "2": "",
      "3": "",
      "4": "",
      "5": "",
      "6": "",
      "7": "",
      "8": "",
      "9": "",
      "default": "󰣇"
    },
    "sort-by": "number",
    "persistent-workspaces": {
      "1": [],
      "2": [],
      "3": [],
      "4": [],
      "5": [],
      "6": [],
      "7": [],
      "8": [],
      "9": []
    }
  },
  "hyprland/window": {
    "format": "{title}",
    "max-length": 25
  },
  "cpu": {
    "format": "<span font-family='RecMonoCasual NF'>{icon}</span> {usage}%",
    "format-icons": [ "󱑽" ],
    "interval": 10
  },
  "memory": {
    "interval": 30,
    "format": " {}%",
    "max-length": 10
  },
  "clock": {
    "interval": 60,
    "format": "<span font-family='RecMonoCasual NF'> </span>{:%H:%M}",
    "tooltip-format": "{:%Y-%m-%d %H:%M}"
  },
  "mpd": {
      "format": "<span font-family='RecMonoCasual NF'>{stateIcon} {artist} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S})  </span>",
      "format-stopped": "<span font-family='RecMonoCasual NF'>Stopped  </span>",
      "format-paused": "<span font-family='RecMonoCasual NF'>Paused  </span>",
      "format-disconnected": "<span font-family='RecMonoCasual NF'>Disconnected  </span>",
      "interval": 10,
      "state-icons": {
          "playing": "",
          "paused": ""
      },
      "tooltip-format": "MPD (connected)",
      "tooltip-format-disconnected": "MPD (disconnected)",
      "on-click": "mpc toggle",
      "on-scroll-up": "mpc prev",
      "on-scroll-down": "mpc next",
      "on-click-right": "~/.config/hypr/scripts/menu_music"
  },
  "network": {
    "interval": 30,
    "format-wifi": "<span font-family='RecMonoCasual NF'> </span> {essid}",
    "format-ethernet": "<span font-family='RecMonoCasual NF'>󰈀 </span> {ipaddr}",
    "format-disconnected": "<span font-family='RecMonoCasual NF'> </span> Disconnect",
    "tooltip-format": "{bandwidthUpBytes} | {bandwidthDownBytes}",
    "on-click": "networkmanager_dmenu"
  },
  "pulseaudio": {
    "scroll-step": 5,
    "format": "<span font-family='RecMonoCasual NF'>{icon}</span> {volume}%",
    "format-icons": {
      "headphone": "",
      "hands-free": "󰗋",
      "headset": "󰋎",
      "phone": "",
      "portable": "",
      "car": "",
      "default": ["󰸈", "", "", "󰕾"]
    },
    "format-muted": "󰖁"
  },
  "tray": {
    "icon-size": 20,
    "spacing": 5
  }
}
